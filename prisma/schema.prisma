// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  address String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Student {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  phone String
  course String
  year Int
  rollNumber String @unique
  address String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("students")
}